{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "frs/payment-calculator",
	"version": "1.1.0",
	"title": "Payment Calculator",
	"category": "frs-calculators",
	"icon": "calculator",
	"description": "Monthly payment breakdown calculator showing principal, interest, taxes, and insurance.",
	"keywords": ["mortgage", "payment", "calculator", "loan", "monthly"],
	"textdomain": "frs-mortgage-calculator",
	"attributes": {
		"userId": {
			"type": "number",
			"default": 0
		},
		"showLeadForm": {
			"type": "boolean",
			"default": true
		},
		"gradientStart": {
			"type": "string",
			"default": "#2563eb"
		},
		"gradientEnd": {
			"type": "string",
			"default": "#2dd4da"
		},
		"webhookUrl": {
			"type": "string",
			"default": ""
		}
	},
	"supports": {
		"html": false,
		"align": ["wide", "full"]
	},
	"render": "file:./render.php"
}
